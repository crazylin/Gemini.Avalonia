<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AuroraUI.Demo.Views.FindReplaceDialog"
        Title="查找和替换"
        Width="450"
        Height="200"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <!-- 查找 -->
        <TextBlock Grid.Row="0" Grid.Column="0" 
                   Text="查找内容:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,8,0" />
        <TextBox Grid.Row="0" Grid.Column="1" 
                 Name="FindTextBox"
                 Text="{Binding FindText, Mode=TwoWay}"
                 Margin="0,0,8,8" />
        <Button Grid.Row="0" Grid.Column="2" 
                Content="查找下一个" 
                Name="FindNextButton"
                Click="FindNext_Click"
                MinWidth="80"
                Margin="0,0,0,8" />
        
        <!-- 替换 -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="替换为:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,8,0" />
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Name="ReplaceTextBox"
                 Text="{Binding ReplaceText, Mode=TwoWay}"
                 Margin="0,0,8,8" />
        <Button Grid.Row="1" Grid.Column="2" 
                Content="替换" 
                Name="ReplaceButton"
                Click="Replace_Click"
                MinWidth="80"
                Margin="0,0,0,8" />
        
        <!-- 选项 -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    Spacing="16"
                    Margin="0,8">
            <CheckBox Name="MatchCaseCheckBox" 
                      Content="区分大小写" 
                      IsChecked="{Binding MatchCase, Mode=TwoWay}" />
            <CheckBox Name="MatchWholeWordCheckBox" 
                      Content="全字匹配" 
                      IsChecked="{Binding MatchWholeWord, Mode=TwoWay}" />
        </StackPanel>
        
        <Button Grid.Row="2" Grid.Column="2" 
                Content="全部替换" 
                Name="ReplaceAllButton"
                Click="ReplaceAll_Click"
                MinWidth="80"
                Margin="0,8,0,8" />
        
        <!-- 按钮组 -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="8"
                    Margin="0,16,0,0">
            <Button Content="关闭" 
                    Name="CloseButton"
                    Click="Close_Click"
                    MinWidth="80" />
        </StackPanel>
        
        <!-- 状态 -->
        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                   Name="StatusTextBlock"
                   Text="{Binding StatusMessage}"
                   VerticalAlignment="Bottom"
                   Foreground="Gray"
                   FontSize="12"
                   Margin="0,8,0,0" />
    </Grid>
</Window>
