<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Gemini.Avalonia.Demo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
             x:Class="Gemini.Avalonia.Demo.Views.AppearanceSettingsView"
             x:DataType="vm:AppearanceSettingsViewModel">
  <ScrollViewer>
    <StackPanel Margin="20" Spacing="15">
      <TextBlock Text="{DynamicResource AppearanceSettings.Title}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
      
      <StackPanel Spacing="5">
        <TextBlock Text="{DynamicResource AppearanceSettings.ColorScheme}"/>
        <ComboBox ItemsSource="{Binding AvailableColorSchemes}" 
                  SelectedItem="{Binding SelectedColorScheme}" 
                  Width="150" HorizontalAlignment="Left"/>
      </StackPanel>
      
      <CheckBox IsChecked="{Binding EnableAnimations}" Content="启用动画效果"/>
      
      <StackPanel Spacing="5">
        <TextBlock Text="{DynamicResource AppearanceSettings.WindowOpacity}"/>
        <Slider Value="{Binding WindowOpacity}" 
                Minimum="0.5" Maximum="1.0" 
                TickFrequency="0.1"
                IsSnapToTickEnabled="True"
                Width="200" HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding WindowOpacity, StringFormat='{}{0:P0}'}" 
                   FontSize="12" Foreground="Gray"/>
      </StackPanel>
      
      <CheckBox IsChecked="{Binding ShowGridLines}" Content="显示网格线"/>
      
      <StackPanel Spacing="5">
        <TextBlock Text="{DynamicResource AppearanceSettings.CustomCssPath}"/>
        <TextBox Text="{Binding CustomCssPath}" 
                 Width="300" HorizontalAlignment="Left"
                 Watermark="留空使用默认样式"/>
      </StackPanel>
      
    </StackPanel>
  </ScrollViewer>
</UserControl>