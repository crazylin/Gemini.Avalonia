<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AuroraUI.Modules.Settings.ViewModels"
             x:Class="AuroraUI.Modules.Settings.Views.ApplicationSettingsView"
             x:DataType="vm:ApplicationSettingsViewModel">
    
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">
            
            <!-- 语言设置 -->
            <StackPanel Spacing="8">
                <TextBlock Text="{DynamicResource Settings.Language}" FontWeight="SemiBold" FontSize="14"/>
                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                          SelectedItem="{Binding SelectedLanguage}"
                          Width="200"
                          HorizontalAlignment="Left"/>
                <TextBlock Text="{DynamicResource Settings.LanguageRestartNote}" 
                           FontSize="12" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            </StackPanel>
            
            <!-- 主题设置 -->
            <StackPanel Spacing="12">
                <TextBlock Text="{DynamicResource Settings.Theme}" FontWeight="SemiBold" FontSize="14"/>
                
                <!-- 主题分类选择 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="主题分类" FontWeight="Medium" FontSize="13"/>
                    <ComboBox ItemsSource="{Binding ThemeCategories}"
                              SelectedItem="{Binding SelectedThemeCategory}"
                              Width="250"
                              HorizontalAlignment="Left">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding Icon}" FontSize="14"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                    <TextBlock Text="-" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{Binding Description}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- 主题选择网格 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="选择主题" FontWeight="Medium" FontSize="13"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" MaxHeight="300">
                        <ItemsControl ItemsSource="{Binding FilteredThemes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="6"
                                            Width="180"
                                            Height="100"
                                            Command="{Binding $parent[UserControl].DataContext.SelectThemeCommand}"
                                            CommandParameter="{Binding}">
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- 主题图标和名称 -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="{Binding Icon}" FontSize="16" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <!-- 主题描述 -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding Description}" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                       TextWrapping="Wrap"
                                                       VerticalAlignment="Center"
                                                       MaxLines="2"/>
                                            
                                            <!-- 主题预览色 -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4" HorizontalAlignment="Right">
                                                <Ellipse Width="12" Height="12">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="{Binding PreviewColor}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="{Binding IsDark}" 
                                                           FontSize="10" 
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
                
                <!-- 当前选中主题信息 -->
                <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        IsVisible="True">
                    <StackPanel Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{Binding SelectedTheme.Icon}" FontSize="16"/>
                            <TextBlock Text="当前选择:" FontWeight="Medium" FontSize="13"/>
                            <TextBlock Text="{Binding SelectedTheme.Name}" FontWeight="SemiBold" FontSize="13"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SelectedTheme.Description}" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            
        </StackPanel>
    </ScrollViewer>
    
</UserControl>