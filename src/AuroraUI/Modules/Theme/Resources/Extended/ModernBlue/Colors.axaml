<!-- 现代蓝色 - 颜色定义 -->
<!-- 专业、清新的蓝色主题，适合长时间工作 -->
<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- 颜色定义 -->
  <Color x:Key="PrimaryColor">#4F7CFF</Color>
  <Color x:Key="PrimaryColorAlpha">#264F7CFF</Color>
  <Color x:Key="SecondaryColor">#6C7CE7</Color>
  <Color x:Key="AccentColor">#00D4FF</Color>
  <Color x:Key="BackgroundColor">#FAFBFC</Color>
  <Color x:Key="SurfaceColor">#FFFFFF</Color>
  <Color x:Key="CardBackground">#FFFFFF</Color>
  <Color x:Key="TextPrimary">#2C3E50</Color>
  <Color x:Key="TextSecondary">#7F8C8D</Color>
  <Color x:Key="TextMuted">#BDC3C7</Color>
  <Color x:Key="BorderColor">#E1E8ED</Color>
  <Color x:Key="HoverColor">#0C4F7CFF</Color>
  <Color x:Key="SuccessColor">#00D68F</Color>
  <Color x:Key="SuccessColorAlpha">#3300D68F</Color>
  <Color x:Key="WarningColor">#FFB946</Color>
  <Color x:Key="ErrorColor">#FF4757</Color>
  <Color x:Key="InfoColor">#3742FA</Color>
  <Color x:Key="SuccessBg">#1900D68F</Color>
  <Color x:Key="SuccessText">#00A085</Color>
  <Color x:Key="WarningBg">#19FFB946</Color>
  <Color x:Key="WarningText">#CC7A00</Color>
  <Color x:Key="ErrorBg">#19FF4757</Color>
  <Color x:Key="ErrorText">#CC1E2E</Color>
  <Color x:Key="InfoBg">#193742FA</Color>
  <Color x:Key="InfoText">#1E3AD1</Color>

  <!-- 画刷定义 -->
  <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}"/>
  <SolidColorBrush x:Key="PrimaryColorAlphaBrush" Color="{StaticResource PrimaryColorAlpha}"/>
  <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}"/>
  <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="BackgroundColorBrush" Color="{StaticResource BackgroundColor}"/>
  <SolidColorBrush x:Key="SurfaceColorBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
  <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
  <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
  <SolidColorBrush x:Key="BorderColorBrush" Color="{StaticResource BorderColor}"/>
  <SolidColorBrush x:Key="HoverColorBrush" Color="{StaticResource HoverColor}"/>
  <SolidColorBrush x:Key="SuccessColorBrush" Color="{StaticResource SuccessColor}"/>
  <SolidColorBrush x:Key="SuccessColorAlphaBrush" Color="{StaticResource SuccessColorAlpha}"/>
  <SolidColorBrush x:Key="WarningColorBrush" Color="{StaticResource WarningColor}"/>
  <SolidColorBrush x:Key="ErrorColorBrush" Color="{StaticResource ErrorColor}"/>
  <SolidColorBrush x:Key="InfoColorBrush" Color="{StaticResource InfoColor}"/>
  <SolidColorBrush x:Key="SuccessBgBrush" Color="{StaticResource SuccessBg}"/>
  <SolidColorBrush x:Key="SuccessTextBrush" Color="{StaticResource SuccessText}"/>
  <SolidColorBrush x:Key="WarningBgBrush" Color="{StaticResource WarningBg}"/>
  <SolidColorBrush x:Key="WarningTextBrush" Color="{StaticResource WarningText}"/>
  <SolidColorBrush x:Key="ErrorBgBrush" Color="{StaticResource ErrorBg}"/>
  <SolidColorBrush x:Key="ErrorTextBrush" Color="{StaticResource ErrorText}"/>
  <SolidColorBrush x:Key="InfoBgBrush" Color="{StaticResource InfoBg}"/>
  <SolidColorBrush x:Key="InfoTextBrush" Color="{StaticResource InfoText}"/>

</ResourceDictionary>