{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-scsa",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AuroraUI.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "run-scsa",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/AuroraUI.Demo"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": "build-scsa"
        },
        {
            "label": "watch-scsa",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/AuroraUI.Demo"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}